<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="5"
        android:paddingTop="100dp"
        android:paddingBottom="1dp"
        android:background="#28352D">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Calculation..."
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="#1A1c1A"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="√"
            android:textSize="30dp"
            android:layout_margin ="20dp"
            android:layout_weight="2"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="π"
            android:textSize="30dp"
            android:layout_margin ="20dp"
            android:layout_weight="2"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="^"
            android:textSize="30dp"
            android:layout_margin ="20dp"
            android:layout_weight="2"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="!"
            android:textSize="30dp"
            android:layout_margin ="20dp"
            android:layout_weight="2"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="#1A1c1A"
        android:paddingTop="50dp"
        >

        <Button

            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="ac"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="()"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="%"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="÷"
            android:textSize="20dp"/>
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="#1A1c1A"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="7"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="8"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="9"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="X"
            android:textSize="20dp"/>
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="#1A1c1A"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="4"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="5"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="6"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="-"
            android:textSize="20dp"/>
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="#1A1c1A"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="1"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="2"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="3"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="+"
            android:textSize="20dp"/>
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="#1A1c1A"
        android:padding="5dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="0"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="."
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="⌫"
            android:textSize="20dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_button"
            android:text="="
            android:textSize="20dp"/>
        />
    </LinearLayout>
</LinearLayout>